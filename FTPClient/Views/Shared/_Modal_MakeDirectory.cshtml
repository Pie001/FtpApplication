@model FTPClient.Models.MakeDirectoryModel

<div class="modal fade" id="modal_make_directory" tabindex="-1" role="dialog" aria-labelledby="add-site-label" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">

            @using (Html.BeginForm(null, null, FormMethod.Post, new {
                id = "form_make_directory"
            }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="title"><i class="icon-folder-add"></i> ディレクトリ作成</h4>
                </div>
                <div class="modal-body">
                    @Html.TextBoxFor(m => m.DirectoryName, new {
                   @style = "width:200px;"
               })
                    <p>
                        @Html.ValidationMessageFor(model => model.DirectoryName)
                    </p>
                </div>

                <div class="modal-footer">
                    <button type="submit" name="Connect" id="btn_make_directory_submit" class="btn btn-default btn-popupmenu"><i class="icon-ok-5"></i> OK</button>
                    <button type="button" name="Connect" class="btn btn-default btn-popupmenu btn-etc" data-dismiss="modal"><i class="icon-cancel-6"></i> Cancel</button>
                </div>
            }
        </div>
    </div>
</div>